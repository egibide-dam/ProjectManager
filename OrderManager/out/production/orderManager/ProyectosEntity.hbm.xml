<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Modelo.ProyectosEntity" table="proyectos" schema="gestionpedidos">
        <id name="cod">
            <column name="cod" sql-type="varchar(6)" length="6"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="ciudad">
            <column name="ciudad" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="alta">
            <column name="alta" sql-type="tinyint(1)"/>
        </property>
        <set name="pedidosByCod" inverse="true">
            <key>
                <column name="proyecto"/>
            </key>
            <one-to-many not-found="ignore" class="Modelo.PedidosEntity"/>
        </set>
    </class>
</hibernate-mapping>