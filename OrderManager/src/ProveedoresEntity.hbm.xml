<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Modelo.ProveedoresEntity" table="proveedores" schema="gestionpedidos">
        <id name="codprov">
            <column name="codprov" sql-type="int"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="apellidos">
            <column name="apellidos" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="direccion">
            <column name="direccion" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="alta">
            <column name="alta" sql-type="tinyint(1)"/>
        </property>
        <set name="pedidosByCodprov" inverse="true">
            <key>
                <column name="proveedor"/>
            </key>
            <one-to-many not-found="ignore" class="Modelo.PedidosEntity"/>
        </set>
        <set name="piezasByCodprov" inverse="true">
            <key>
                <column name="proveedor"/>
            </key>
            <one-to-many not-found="ignore" class="Modelo.PiezasEntity"/>
        </set>
    </class>
</hibernate-mapping>