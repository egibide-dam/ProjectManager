<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Modelo.PiezasEntity" table="piezas" schema="gestionpedidos">
        <id name="cod">
            <column name="cod" sql-type="varchar(6)" length="6"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="precio">
            <column name="precio" sql-type="float" precision="-1"/>
        </property>
        <property name="descripcion">
            <column name="descripcion" sql-type="text" not-null="true"/>
        </property>
        <property name="proveedor">
            <column name="proveedor" sql-type="varchar(6)" length="6"/>
        </property>
        <property name="alta">
            <column name="alta" sql-type="tinyint(1)"/>
        </property>
        <many-to-one name="proveedoresByProveedor" class="Modelo.ProveedoresEntity">
            <column name="proveedor"/>
        </many-to-one>
        <set name="pedidosByCod" inverse="true">
            <key>
                <column name="pieza"/>
            </key>
            <one-to-many not-found="ignore" class="Modelo.PedidosEntity"/>
        </set>
    </class>
</hibernate-mapping>