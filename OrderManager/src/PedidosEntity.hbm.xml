<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Modelo.PedidosEntity" table="pedidos" schema="gestionpedidos">
        <id name="cod">
            <column name="cod" sql-type="varchar(6)" length="6"/>
        </id>
        <property name="proveedor">
            <column name="proveedor" sql-type="varchar(6)" length="6"/>
        </property>
        <property name="pieza">
            <column name="pieza" sql-type="varchar(6)" length="6"/>
        </property>
        <property name="proyecto">
            <column name="proyecto" sql-type="varchar(6)" length="6"/>
        </property>
        <property name="cantidad">
            <column name="cantidad" sql-type="float" precision="-1"/>
        </property>
        <property name="alta">
            <column name="alta" sql-type="tinyint(1)"/>
        </property>
        <many-to-one name="proveedoresByProveedor" class="Modelo.ProveedoresEntity">
            <column name="proveedor"/>
        </many-to-one>
        <many-to-one name="piezasByPieza" class="Modelo.PiezasEntity">
            <column name="pieza"/>
        </many-to-one>
        <many-to-one name="proyectosByProyecto" class="Modelo.ProyectosEntity">
            <column name="proyecto"/>
        </many-to-one>
    </class>
</hibernate-mapping>